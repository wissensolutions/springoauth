<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE logback>
<configuration scan="true" scanPeriod="60 seconds" debug="false">

	<!-- Appenders -->
	<appender name="consoleAppender" class="ch.qos.logback.com.myorg.auth.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSS} LEVEL=%-5p TXNID=%X{TXNID} THREAD_ID=%t %m%n</pattern>
		</layout>
	</appender>
	
	<appender name="rollingLog" class="ch.qos.logback.com.myorg.auth.core.rolling.RollingFileAppender">
		<file>${catalina.logs}/${appName}_${port.http.nonssl}.log</file>
		<rollingPolicy class="ch.qos.logback.com.myorg.auth.core.rolling.FixedWindowRollingPolicy">
			<fileNamePattern>${catalina.logs}/${appName}.${port.http.nonssl}.%i.log.gz</fileNamePattern>
			<minIndex>1</minIndex>
			<maxIndex>5</maxIndex>
		</rollingPolicy>
		<triggeringPolicy class="ch.qos.logback.com.myorg.auth.core.rolling.SizeBasedTriggeringPolicy">
			<maxFileSize>100MB</maxFileSize>
		</triggeringPolicy>
		<encoder>
			<pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSS} LEVEL=%-5p TXNID=%X{TXNID} THREAD_ID=%t %m%n</pattern>
		</encoder>
	</appender>
	
	<appender name="rollingLogAsync" class="ch.qos.logback.classic.AsyncAppender">
		<queueSize>500</queueSize>
		<discardingThreshold>0</discardingThreshold>
    	<appender-ref ref="rollingLog" />
  	</appender>

	<!-- 3rdparty Loggers -->
	<logger name="org.springframework" level="ERROR" />
	<logger name="org.spring.framework" level="ERROR" />
	<logger name="httpclient" level="WARN" />
	<logger name="org.apache" level="WARN" />
	<logger name="org" level="WARN" />


	<!-- Application Loggers -->
	<logger name="com.myorg.com.myorg.auth" level="INFO" />
	
	<root level="INFO">
		<appender-ref ref="rollingLogAsync" />
	</root>
	
</configuration>
